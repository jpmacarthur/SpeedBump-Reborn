<UserControl x:Class="SpeedBump.MyScrollViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpeedBump"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button Panel.ZIndex="2" Height="25" Width="25" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,20,0" Background="Transparent" Foreground="DarkSlateGray" BorderThickness="0" Click="Button_Click">X</Button>
        <ScrollViewer Background="White" Name="scroll"></ScrollViewer>
    </Grid>
</UserControl>
